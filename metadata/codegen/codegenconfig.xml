<?xml version="1.0" encoding="utf-8" ?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="codegen.xsd">
	<!-- 
		开发者和公司名称
		请务必改成自己的姓名
	-->
	<variables>
		<variable name="developer" value="马良" />
		<variable name="company" value="casic" />
		<variable name="org" value="casic" />
	</variables>
	
	<templates>
		<template id="model" path="model.ftl"/>
		<template id="dao" path="dao.ftl"/>
		<template id="service"  path="service.ftl"/>
		<template id="controller"  path="controller.ftl"/>
		<template id="list"  path="list.jsp"/>
		<template id="get"  path="get.jsp"/>
		<template id="edit"  path="edit.jsp"/>
		<template id="pageEdit" path="pageEdit.jsp"/>
		<template id="formValid" path="formValid.ftl" />
		<template id="formproperties" path="formproperties.ftl" />
		<template id="mapper" path="mapper.ftl"/>
		<!-- 
		<template id="mobileForm" path="mobileform.ftl"/>
		<template id="mobileDetail" path="mobiledetail.ftl"/>
		 -->
	</templates>
	
	
	<files baseDir="C:\codegen" >
		<file refTemplate="mapper" filename="{class}.map.xml" dir="resources\com\casic\{system}\maper"  sub="true"  override="true"/>
		<file refTemplate="model" filename="{class}.java" dir="src\com\casic\{system}\model\{module}"  sub="true" override="true"/>
		<file refTemplate="dao" filename="{class}Dao.java" dir="src\com\casic\{system}\dao\{module}" sub="true"  override="true"/>
		<file refTemplate="service" filename="{class}Service.java" dir="src\com\casic\{system}\service\{module}"  override="true"/>
		<file refTemplate="controller" filename="{class}Controller.java" dir="src\com\casic\{system}\controller\{module}"  override="true"/>
		<file refTemplate="list" filename="{classVar}List.jsp" dir="web\WEB-INF\view\{system}\{module}" override="true"/>
		<file refTemplate="get" filename="{classVar}Get.jsp" dir="web\WEB-INF\view\{system}\{module}" override="true"/>
		<file refTemplate="edit" filename="{classVar}Edit.jsp" dir="web\WEB-INF\view\{system}\{module}" override="true"/>
		<!-- 
		<file refTemplate="mobileForm" filename="{class}Form.js" dir="web\js\casic\{system}\{module}"  override="true"/>
		<file refTemplate="mobileDetail" filename="{class}Detail.js" dir="web\js\casic\{system}\{module}"  override="true"/>
		 -->
	</files>
	
		<!-- module为功能模块名，saas为个性化定制的企业名,class为类名（规范为表名去掉下划线大写）-->
